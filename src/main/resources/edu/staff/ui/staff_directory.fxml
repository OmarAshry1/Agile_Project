<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.staff.ui.StaffDirectoryController">
   <top>
      <VBox spacing="10.0" style="-fx-background-color: #f4f4f4; -fx-padding: 15;">
         <children>
            <Label text="Staff Directory" textFill="#2c3e50">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <HBox spacing="15.0">
               <children>
                  <TextField fx:id="searchField" promptText="Search by name, role, or email..." HBox.hgrow="ALWAYS" />
                  <ComboBox fx:id="departmentFilter" prefWidth="200.0" promptText="Filter by Department" />
                  <Button fx:id="searchButton" mnemonicParsing="false" onAction="#handleSearch" text="Search" />
                  <Button fx:id="clearButton" mnemonicParsing="false" onAction="#handleClear" text="Clear" />
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <ScrollPane fitToWidth="true" style="-fx-background: white; -fx-background-color: transparent;" BorderPane.alignment="CENTER">
         <content>
            <FlowPane fx:id="staffContainer" hgap="20.0" vgap="20.0" style="-fx-padding: 20;">
               <!-- Staff cards will be added here dynamically -->
            </FlowPane>
         </content>
      </ScrollPane>
   </center>
   <bottom>
      <Label fx:id="statusLabel" text="Ready" textFill="#7f8c8d" BorderPane.alignment="CENTER_LEFT">
         <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
         </padding>
      </Label>
   </bottom>
</BorderPane>
