        <items>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
               <children>
                  <VBox prefHeight="698.0" prefWidth="296.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <children>
                        <Label text="Staff Profiles">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Label>
                        <TextField fx:id="searchField" promptText="Search Staff..." />
                        <ListView fx:id="staffListView" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
                        <Button fx:id="addNewButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleAddNew" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="Add New Staff">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Button>
                     </children>
                  </VBox>
               </children>
            </AnchorPane>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
               <children>
                  <VBox fx:id="formContainer" layoutX="87.0" layoutY="59.0" prefHeight="698.0" prefWidth="696.0" spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                     <children>
                        <Label text="Staff Details">
                           <font>
                              <Font name="System Bold" size="22.0" />
                           </font>
                        </Label>
                        <GridPane hgap="15.0" vgap="15.0">
                          <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="100.0" prefWidth="120.0" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                          </columnConstraints>
                          <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                          </rowConstraints>
                           <children>
                              <Label text="Full Name:" />
                              <TextField fx:id="nameField" promptText="e.g. Dr. John Smith" GridPane.columnIndex="1" />
                              <Label text="Role/Title:" GridPane.rowIndex="1" />
                              <TextField fx:id="roleField" promptText="e.g. Professor" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                              <Label text="Department:" GridPane.rowIndex="2" />
                              <ComboBox fx:id="departmentComboBox" maxWidth="1.7976931348623157E308" prefWidth="150.0" promptText="Select Department" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                              <Label text="Email:" GridPane.rowIndex="3" />
                              <TextField fx:id="emailField" promptText="e.g. john.smith@edu.com" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                              <Label text="Office Location:" GridPane.rowIndex="4" />
                              <TextField fx:id="officeLocationField" promptText="e.g. Science Bldg Room 301" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                              <Label text="Office Hours:" GridPane.rowIndex="5" />
                              <TextField fx:id="officeHoursField" promptText="e.g. Mon/Wed 10-12" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                              <Label text="Phone:" GridPane.rowIndex="6" />
                              <TextField fx:id="phoneField" promptText="e.g. 555-0100" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                              <Label text="Hire Date:" GridPane.rowIndex="7" />
                              <DatePicker fx:id="hireDatePicker" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                              <Label text="Status:" GridPane.rowIndex="8" />
                              <CheckBox fx:id="isActiveCheckBox" mnemonicParsing="false" selected="true" text="Active" GridPane.columnIndex="1" GridPane.rowIndex="8" />
                           </children>
                        </GridPane>
                        <Label text="Bio:" />
                        <TextArea fx:id="bioArea" prefHeight="100.0" prefWidth="200.0" promptText="Enter biography describing expertise and background..." wrapText="true" VBox.vgrow="ALWAYS" />
                        <HBox alignment="CENTER_RIGHT" spacing="10.0">
                           <children>
                              <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#handleDelete" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Delete User" />
                              <Label maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
                              <Button mnemonicParsing="false" onAction="#handleCancel" text="Cancel" />
