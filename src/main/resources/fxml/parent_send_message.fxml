<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.community.ui.ParentSendMessageController"
            prefHeight="600.0" prefWidth="800.0"
            stylesheets="@../css/style.css">

    <VBox spacing="15" AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20"
          AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>

        <Label text="Send Message to Teacher" styleClass="page-title"/>

        <VBox spacing="10">
            <Label text="Select Your Child:" styleClass="form-label"/>
            <ComboBox fx:id="studentComboBox" prefWidth="400" prefHeight="35"/>

            <Label text="Select Teacher:" styleClass="form-label"/>
            <ComboBox fx:id="teacherComboBox" prefWidth="400" prefHeight="35"/>

            <Label text="Subject *" styleClass="form-label"/>
            <TextField fx:id="subjectField" prefHeight="35"/>

            <Label text="Message *" styleClass="form-label"/>
            <TextArea fx:id="messageBodyArea" prefRowCount="10" wrapText="true"/>
        </VBox>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel" 
                    styleClass="button-secondary" prefWidth="100"/>
            <Button fx:id="sendButton" text="Send Message" onAction="#handleSend" 
                    styleClass="button-primary" prefWidth="150"/>
        </HBox>
    </VBox>
</AnchorPane>

