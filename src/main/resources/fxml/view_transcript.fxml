<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="800.0" prefWidth="1200.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.curriculum.ui.ViewTranscriptController">
   <children>
      <VBox alignment="TOP_CENTER" spacing="20" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">
         <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
         </padding>
         
         <!-- Header -->
         <VBox alignment="CENTER" spacing="10">
            <Label styleClass="page-title" text="Academic Transcript" />
            <Label fx:id="studentInfoLabel" styleClass="form-label" text="" textAlignment="CENTER" />
         </VBox>

         <!-- Summary Statistics -->
         <HBox spacing="30" alignment="CENTER" styleClass="card">
            <padding>
               <Insets bottom="15" left="15" right="15" top="15" />
            </padding>
            <Label fx:id="gpaLabel" styleClass="section-header" text="Cumulative GPA: 0.00" />
            <Label fx:id="creditsLabel" styleClass="section-header" text="Completed Credits: 0" />
            <Label fx:id="coursesLabel" styleClass="section-header" text="Completed Courses: 0" />
         </HBox>

         <!-- Transcript Table -->
         <VBox spacing="10" VBox.vgrow="ALWAYS">
            <Label text="Course History" styleClass="section-header"/>
            <TableView fx:id="transcriptTable" VBox.vgrow="ALWAYS" styleClass="table-view">
               <columns>
                  <TableColumn fx:id="semesterColumn" minWidth="150.0" prefWidth="180.0" text="Semester" sortable="true"/>
                  <TableColumn fx:id="codeColumn" minWidth="120.0" prefWidth="150.0" text="Course Code" sortable="true"/>
                  <TableColumn fx:id="nameColumn" minWidth="250.0" prefWidth="400.0" text="Course Name" sortable="true"/>
                  <TableColumn fx:id="creditsColumn" minWidth="100.0" prefWidth="120.0" text="Credits" sortable="true"/>
                  <TableColumn fx:id="gradeColumn" minWidth="100.0" prefWidth="120.0" text="Final Grade" sortable="true"/>
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <placeholder>
                  <VBox alignment="CENTER" spacing="10" styleClass="padding-large">
                     <Label text="No Completed Courses" styleClass="section-header"/>
                     <Label text="You have not completed any courses yet" styleClass="form-label"/>
                  </VBox>
               </placeholder>
            </TableView>
         </VBox>

         <!-- Action Buttons -->
         <HBox spacing="15" alignment="CENTER">
            <Button fx:id="exportPdfButton" onAction="#handleExportPDF" minWidth="150" prefHeight="40" prefWidth="150" styleClass="btn-primary" text="Export as PDF" />
            <Button fx:id="refreshButton" onAction="#handleRefresh" minWidth="120" prefHeight="40" prefWidth="120" styleClass="btn-secondary" text="Refresh" />
            <Button fx:id="backButton" onAction="#handleBack" minWidth="160" prefHeight="40" prefWidth="160" styleClass="btn-secondary" text="Back to Dashboard" />
         </HBox>

         <!-- Status Message -->
         <Label fx:id="statusLabel" alignment="CENTER" style="-fx-text-fill: #4CAF50; -fx-font-size: 12px;" text="" textAlignment="CENTER" wrapText="true" />
      </VBox>
   </children>
</AnchorPane>

