<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="700.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.facilities.ui.AddEquipmentController">

    <StackPane alignment="CENTER" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <VBox alignment="CENTER" maxWidth="500" spacing="20" styleClass="padding-large">

            <VBox alignment="CENTER" maxWidth="500" spacing="10" styleClass="card">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="20" />
                </padding>
                <Label styleClass="page-title" text="Add Equipment" />
                <Label styleClass="form-label" text="Add new equipment to the system" textAlignment="CENTER" wrapText="true" />
            </VBox>

            <VBox maxWidth="500" spacing="15" styleClass="card">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="20" />
                </padding>

                <!-- Equipment Type Selection -->
                <VBox spacing="5">
                    <Label styleClass="form-label" text="Equipment Type *" />
                    <ComboBox fx:id="equipmentTypeComboBox" prefHeight="40" promptText="Select or enter equipment type" editable="true" />
                    <Label fx:id="equipmentTypeError" style="-fx-text-fill: #E53935; -fx-font-size: 11px;" text="" visible="false" />
                </VBox>

                <!-- Serial Number -->
                <VBox spacing="5">
                    <Label styleClass="form-label" text="Serial Number (Optional)" />
                    <TextField fx:id="serialNumberField" promptText="Enter serial number" />
                </VBox>

                <!-- Location -->
                <VBox spacing="5">
                    <Label styleClass="form-label" text="Location (Optional)" />
                    <TextField fx:id="locationField" promptText="Enter current location" />
                </VBox>

                <!-- Notes -->
                <VBox spacing="5">
                    <Label styleClass="form-label" text="Notes (Optional)" />
                    <TextArea fx:id="notesTextArea" prefHeight="80" promptText="Additional notes about this equipment..." wrapText="true" />
                </VBox>

                <!-- Action Buttons -->
                <HBox spacing="10" alignment="CENTER">
                    <Button fx:id="addButton" onAction="#handleAdd" styleClass="button-primary" text="Add Equipment" />
                    <Button fx:id="cancelButton" onAction="#handleCancel" styleClass="button-secondary" text="Cancel" />
                </HBox>

                <!-- Status Message -->
                <Label fx:id="statusLabel" alignment="CENTER" style="-fx-text-fill: #4CAF50; -fx-font-size: 12px;" text="" textAlignment="CENTER" visible="false" wrapText="true" />

            </VBox>
        </VBox>
    </StackPane>
</AnchorPane>

