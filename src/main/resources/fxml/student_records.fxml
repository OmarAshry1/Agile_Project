<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.facilities.ui.StudentRecordController"
            prefHeight="700.0" prefWidth="1200.0"
            stylesheets="@../css/style.css">

    <!-- Main Container -->
    <VBox spacing="20" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" styleClass="padding-large">

        <!-- Header Section -->
        <HBox alignment="CENTER_LEFT" spacing="20">
            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label text="Student Records Management" styleClass="page-title"/>
                <Label text="Create, edit, and delete student records (Admin Only)" styleClass="form-label"/>
            </VBox>

            <!-- Action Buttons (Right Side) -->
            <HBox spacing="12" alignment="CENTER_RIGHT">
                <Button fx:id="backButton" text="â¬… Back" styleClass="btn-secondary"
                        onAction="#handleBack" prefWidth="120"/>
                <Button fx:id="addButton" text="âž• Add Record" styleClass="btn-primary"
                        onAction="#handleAdd" prefWidth="140"/>
                <Button fx:id="editButton" text="âœï¸ Edit" styleClass="btn-primary"
                        onAction="#handleEdit" prefWidth="120"/>
                <Button fx:id="deleteButton" text="ðŸ—‘ï¸ Delete" styleClass="btn-danger"
                        onAction="#handleDelete" prefWidth="120"/>
            </HBox>
        </HBox>

        <!-- Search and Filter Section -->
        <HBox spacing="15" alignment="CENTER_LEFT" styleClass="card">
            <VBox spacing="5" HBox.hgrow="ALWAYS">
                <Label text="Search Students" styleClass="form-label"/>
                <TextField fx:id="searchField" promptText="Search by username, email, student number, or major..."
                           styleClass="search-field" prefWidth="400"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Filter by Status" styleClass="form-label"/>
                <ComboBox fx:id="statusFilter" promptText="All Statuses" prefWidth="180"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Filter by Department" styleClass="form-label"/>
                <ComboBox fx:id="departmentFilter" promptText="All Departments" prefWidth="180"/>
            </VBox>
        </HBox>

        <!-- Table Section -->
        <VBox VBox.vgrow="ALWAYS" spacing="10">
            <Label text="All Student Records" styleClass="section-header"/>

            <TableView fx:id="studentsTable" VBox.vgrow="ALWAYS" styleClass="table-view">
                <columns>
                    <!-- Username Column -->
                    <TableColumn fx:id="usernameColumn" text="Username" prefWidth="150"
                                 sortable="true"/>

                    <!-- Student Number Column -->
                    <TableColumn fx:id="studentNumberColumn" text="Student Number" prefWidth="150"
                                 sortable="true"/>

                    <!-- Email Column -->
                    <TableColumn fx:id="emailColumn" text="Email" prefWidth="200"
                                 sortable="true"/>

                    <!-- Major Column -->
                    <TableColumn fx:id="majorColumn" text="Major" prefWidth="180"
                                 sortable="true"/>

                    <!-- Department Column -->
                    <TableColumn fx:id="departmentColumn" text="Department" prefWidth="150"
                                 sortable="true"/>

                    <!-- Status Column -->
                    <TableColumn fx:id="statusColumn" text="Status" prefWidth="120"
                                 sortable="true"/>

                    <!-- Year Level Column -->
                    <TableColumn fx:id="yearLevelColumn" text="Year Level" prefWidth="120"
                                 sortable="true"/>

                    <!-- GPA Column -->
                    <TableColumn fx:id="gpaColumn" text="GPA" prefWidth="80"
                                 sortable="true"/>
                </columns>
            </TableView>
        </VBox>

        <!-- Status Label -->
        <HBox alignment="CENTER_LEFT">
            <Label fx:id="statusLabel" text="Ready" styleClass="form-label"/>
        </HBox>
    </VBox>
</AnchorPane>


