<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.facilities.ui.dashboardcontroller">

    <VBox spacing="25" styleClass="padding-large" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

        <!-- Welcome Text -->
        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="card">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <Label styleClass="page-title" text="Welcome," />
            <Label fx:id="userIdLabel" prefHeight="34.0" prefWidth="284.0" styleClass="page-title" />
        </HBox>

        <!-- Buttons Row - Using FlowPane for automatic wrapping -->
        <FlowPane alignment="CENTER_LEFT" hgap="15" vgap="15" styleClass="padding-large">
            <Button fx:id="roomsButton" onAction="#handleRooms" minHeight="50" minWidth="180" prefHeight="50" prefWidth="180" styleClass="btn-primary" text="Rooms" />
            <Button fx:id="reportButton" onAction="#handleReport" minHeight="50" minWidth="180" prefHeight="50" prefWidth="180" styleClass="btn-primary" text="Report" />
            <Button fx:id="bookRoomButton" onAction="#handleBookRoom" minHeight="50" minWidth="180" prefHeight="50" prefWidth="180" styleClass="btn-primary" text="Book Room" />
            <Button fx:id="viewMyBookingsButton" onAction="#handleViewMyBookings" minHeight="50" minWidth="180" prefHeight="50" prefWidth="180" styleClass="btn-primary" text="My Bookings" />
            <Button fx:id="viewMyTicketsButton" onAction="#handleViewMyTickets" minHeight="50" minWidth="180" prefHeight="50" prefWidth="180" styleClass="btn-primary" text="View My Tickets" />
            <Button fx:id="viewEquipmentButton" onAction="#handleViewEquipment" minHeight="50" minWidth="180" prefHeight="50" prefWidth="180" styleClass="btn-primary" text="View Equipment" />
            <Button fx:id="myAllocatedEquipmentButton" onAction="#handleMyAllocatedEquipment" minHeight="50" minWidth="180" prefHeight="50" prefWidth="180" styleClass="btn-primary" text="My Equipment" />
            <Button fx:id="allocateEquipmentButton" onAction="#handleAllocateEquipment" minHeight="50" minWidth="180" prefHeight="50" prefWidth="180" styleClass="btn-primary" text="Allocate Equipment" />
            <Button fx:id="addEquipmentButton" onAction="#handleAddEquipment" minHeight="50" minWidth="180" prefHeight="50" prefWidth="180" styleClass="btn-primary" text="Add Equipment" />
            <Button fx:id="softwareLicensesButton" onAction="#handleSoftwareLicenses" minHeight="50" minWidth="180" prefHeight="50" prefWidth="180" styleClass="btn-primary" text="Software Licenses" />
            <Button fx:id="admissionApplicationsButton" onAction="#handleAdmissionApplications" minHeight="50" minWidth="180" prefHeight="50" prefWidth="180" styleClass="btn-primary" text="Admission Applications" />
            <Button fx:id="studentRecordsButton" onAction="#handleStudentRecords" minHeight="50" minWidth="180" prefHeight="50" prefWidth="180" styleClass="btn-primary" text="Student Records" />
            <Button fx:id="myTranscriptsButton" onAction="#handleMyTranscripts" minHeight="50" minWidth="180" prefHeight="50" prefWidth="180" styleClass="btn-primary" text="View Transcript" visible="false" managed="false" />
            <Button fx:id="requestTranscriptButton" onAction="#handleRequestTranscript" minHeight="50" minWidth="180" prefHeight="50" prefWidth="180" styleClass="btn-primary" text="Request Transcript" visible="false" managed="false" />
            <Button fx:id="transcriptRequestsButton" onAction="#handleTranscriptRequests" minHeight="50" minWidth="180" prefHeight="50" prefWidth="180" styleClass="btn-primary" text="Transcript Requests" />
            <Button fx:id="myAssignmentsButton" onAction="#handleMyAssignments" minHeight="50" minWidth="180" prefHeight="50" prefWidth="180" styleClass="btn-primary" text="My Assignments" visible="false" managed="false" />
            <Button fx:id="manageAssignmentsButton" onAction="#handleManageAssignments" minHeight="50" minWidth="180" prefHeight="50" prefWidth="180" styleClass="btn-primary" text="Manage Assignments" visible="false" managed="false" />
            <Button fx:id="viewGradebookButton" onAction="#handleViewGradebook" minHeight="50" minWidth="180" prefHeight="50" prefWidth="180" styleClass="btn-primary" text="View Gradebook" visible="false" managed="false" />
            <Button fx:id="calculateFinalGradesButton" onAction="#handleCalculateFinalGrades" minHeight="50" minWidth="180" prefHeight="50" prefWidth="180" styleClass="btn-primary" text="Calculate Final Grades" visible="false" managed="false" />
            <Button fx:id="viewCourseCatalogButton" onAction="#handleViewCourseCatalog" minHeight="50" minWidth="180" prefHeight="50" prefWidth="180" styleClass="btn-primary" text="View Course Catalog" visible="false" managed="false" />
            <Button fx:id="enrollInCoursesButton" onAction="#handleEnrollInCourses" minHeight="50" minWidth="180" prefHeight="50" prefWidth="180" styleClass="btn-primary" text="Enroll in Courses" visible="false" managed="false" />
            <Button fx:id="myEnrolledCoursesButton" onAction="#handleMyEnrolledCourses" minHeight="50" minWidth="180" prefHeight="50" prefWidth="180" styleClass="btn-primary" text="My Enrolled Courses" visible="false" managed="false" />
            <Button fx:id="manageCoursesButton" onAction="#handleManageCourses" minHeight="50" minWidth="180" prefHeight="50" prefWidth="180" styleClass="btn-primary" text="Manage Courses" visible="false" managed="false" />
            <Button fx:id="assignCoursesButton" onAction="#handleAssignCourses" minHeight="50" minWidth="180" prefHeight="50" prefWidth="180" styleClass="btn-primary" text="Assign Courses to Professors" visible="false" managed="false" />
            <Button fx:id="assignStaffToCourseButton" onAction="#handleAssignStaffToCourse" minHeight="50" minWidth="180" prefHeight="50" prefWidth="180" styleClass="btn-primary" text="Assign Staff to Courses" visible="false" managed="false" />
            <Button fx:id="viewAssignedCoursesButton" onAction="#handleViewAssignedCourses" minHeight="50" minWidth="180" prefHeight="50" prefWidth="180" styleClass="btn-primary" text="My Assigned Courses" visible="false" managed="false" />
            <Button fx:id="viewAnnouncementsButton" onAction="#handleViewAnnouncements" minHeight="50" minWidth="180" prefHeight="50" prefWidth="180" styleClass="btn-primary" text="View Announcements" visible="false" managed="false" />
            <Button fx:id="createAnnouncementButton" onAction="#handleCreateAnnouncement" minHeight="50" minWidth="180" prefHeight="50" prefWidth="180" styleClass="btn-primary" text="Create Announcement" visible="false" managed="false" />
            <Button fx:id="myQuizzesButton" onAction="#handleMyQuizzes" minHeight="50" minWidth="180" prefHeight="50" prefWidth="180" styleClass="btn-primary" text="My Quizzes" visible="false" managed="false" />
            <Button fx:id="myExamsButton" onAction="#handleMyExams" minHeight="50" minWidth="180" prefHeight="50" prefWidth="180" styleClass="btn-primary" text="My Exams" visible="false" managed="false" />
            <Button fx:id="courseGradesButton" onAction="#handleCourseGrades" minHeight="50" minWidth="180" prefHeight="50" prefWidth="180" styleClass="btn-primary" text="Course Grades" visible="false" managed="false" />
            <Button fx:id="manageQuizzesButton" onAction="#handleManageQuizzes" minHeight="50" minWidth="180" prefHeight="50" prefWidth="180" styleClass="btn-primary" text="Manage Quizzes" visible="false" managed="false" />
            <Button fx:id="manageExamsButton" onAction="#handleManageExams" minHeight="50" minWidth="180" prefHeight="50" prefWidth="180" styleClass="btn-primary" text="Manage Exams" visible="false" managed="false" />
            <Button fx:id="staffDirectoryButton" onAction="#handleStaffDirectory" minHeight="50" minWidth="180" prefHeight="50" prefWidth="180" styleClass="btn-primary" text="Staff Directory" />
            <Button fx:id="messagesButton" onAction="#handleMessagesButton" minHeight="50" minWidth="180" prefHeight="50" prefWidth="180" styleClass="btn-primary" text="Messages" visible="false" managed="false" />
            <Button fx:id="manageStaffButton" onAction="#handleManageStaff" minHeight="50" minWidth="180" prefHeight="50" prefWidth="180" styleClass="btn-primary" text="Manage Staff Profiles" visible="false" managed="false" />
            <Button fx:id="recordPerformanceButton" onAction="#handleRecordPerformanceEvaluation" minHeight="50" minWidth="180" prefHeight="50" prefWidth="180" styleClass="btn-primary" text="Record Performance" visible="false" managed="false" />
            <Button fx:id="viewPerformanceButton" onAction="#handleViewPerformanceEvaluation" minHeight="50" minWidth="180" prefHeight="50" prefWidth="180" styleClass="btn-primary" text="My Evaluations" visible="false" managed="false" />
            <Button fx:id="addResearchButton" onAction="#handleAddResearchActivity" minHeight="50" minWidth="180" prefHeight="50" prefWidth="180" styleClass="btn-primary" text="Add Research" visible="false" managed="false" />
            <Button fx:id="reviewResearchButton" onAction="#handleReviewResearchRecords" minHeight="50" minWidth="180" prefHeight="50" prefWidth="180" styleClass="btn-primary" text="Review Research" visible="false" managed="false" />
            <Button fx:id="logoutButton" onAction="#handleLogout" minHeight="50" minWidth="180" prefHeight="50" prefWidth="180" styleClass="btn-secondary" text="Logout" />
            <Button fx:id="loginButton" onAction="#handleLogin" minHeight="50" minWidth="180" prefHeight="50" prefWidth="180" styleClass="btn-primary" text="Login" />
            <Button fx:id="registerButton" onAction="#handleRegister" minHeight="50" minWidth="180" prefHeight="50" prefWidth="180" styleClass="btn-primary" text="Register" />
        </FlowPane>

        <!-- Empty space for future buttons -->
        <VBox fx:id="extraButtonsContainer" prefHeight="300" spacing="10" styleClass="card">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <!-- Future buttons can be added dynamically here -->
        </VBox>

    </VBox>

</AnchorPane>
