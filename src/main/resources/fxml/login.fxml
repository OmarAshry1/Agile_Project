<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.facilities.ui.LoginController">

    <VBox alignment="CENTER" spacing="20" styleClass="padding-large" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

        <!-- Header Card -->
        <VBox alignment="CENTER" spacing="10" styleClass="card">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <Label styleClass="page-title" text="Login" />
            <Label styleClass="form-label" text="Enter your Username and password to access your account" />
        </VBox>

        <!-- Login Form Card -->
        <VBox maxWidth="400" spacing="15" styleClass="card">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <!-- ID -->
            <VBox spacing="5">
                <Label styleClass="form-label" text="Username *" />
                <TextField fx:id="usernameField" prefHeight="40" promptText="Enter your Username" />
                <Label fx:id="usernameError" style="-fx-text-fill: #E53935; -fx-font-size: 11px;" text="" visible="false" />
            </VBox>

            <!-- Password -->
            <VBox spacing="5">
                <Label styleClass="form-label" text="Password *" />
                <PasswordField fx:id="passwordField" prefHeight="40" promptText="Enter your password" />
                <Label fx:id="passwordError" style="-fx-text-fill: #E53935; -fx-font-size: 11px;" text="" visible="false" />
            </VBox>

            <!-- Login Button -->
            <Button fx:id="loginbutton" maxWidth="Infinity" onAction="#handleLogin" prefHeight="40" styleClass="btn-success" text="Login" />

        </VBox>

        <!-- Footer -->
        <HBox alignment="CENTER" spacing="5">
            <Label styleClass="form-label" text="Don't have an account?" />
            <Hyperlink fx:id="registerLink" onAction="#register" text="Register here" />
        </HBox>

    </VBox>
</AnchorPane>
