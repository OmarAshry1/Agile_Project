<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.facilities.ui.LoginController">

    <StackPane alignment="CENTER" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" styleClass="login-container">
        
        <!-- Login Card -->
        <VBox alignment="CENTER" spacing="24" styleClass="login-card">
            
            <!-- Header -->
            <VBox alignment="CENTER" spacing="8">
                <Label styleClass="login-title" text="Welcome Back" />
                <Label styleClass="login-subtitle" text="Sign in to access your university management account" textAlignment="CENTER" wrapText="true" />
            </VBox>
            
            <!-- Form -->
            <VBox spacing="20" styleClass="full-width">
                
                <!-- Username Field -->
                <VBox spacing="8" styleClass="form-group">
                    <Label styleClass="form-label" text="Username" />
                    <TextField fx:id="usernameField" prefHeight="44" promptText="Enter your username" styleClass="full-width" />
                    <Label fx:id="usernameError" styleClass="error-message" text="" visible="false" />
                </VBox>
                
                <!-- Password Field -->
                <VBox spacing="8" styleClass="form-group">
                    <Label styleClass="form-label" text="Password" />
                    <PasswordField fx:id="passwordField" prefHeight="44" promptText="Enter your password" styleClass="full-width" />
                    <Label fx:id="passwordError" styleClass="error-message" text="" visible="false" />
                </VBox>
                
                <!-- Login Button -->
                <Button fx:id="loginbutton" maxWidth="Infinity" onAction="#handleLogin" prefHeight="44" styleClass="btn-primary" text="Sign In" />
                
            </VBox>
            
            <!-- Footer -->
            <HBox alignment="CENTER" spacing="8">
                <Label styleClass="text-muted" text="Don't have an account?" />
                <Hyperlink fx:id="registerLink" onAction="#register" text="Register here" />
            </HBox>
            
        </VBox>
        
    </StackPane>
</AnchorPane>
