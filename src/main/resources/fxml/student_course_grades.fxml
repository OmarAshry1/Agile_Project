<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="800.0" prefWidth="1400.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.curriculum.ui.StudentCourseGradesController">
   <children>
      <VBox alignment="TOP_CENTER" spacing="20" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">
         <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
         </padding>
         
         <!-- Header -->
         <VBox alignment="CENTER" spacing="10">
            <Label styleClass="page-title" text="Course Grades" />
            <Label styleClass="form-label" text="View all your grades for a course" textAlignment="CENTER" />
         </VBox>

         <!-- Course Selection -->
         <HBox alignment="CENTER_LEFT" spacing="15" styleClass="card">
            <padding>
               <Insets bottom="15" left="15" right="15" top="15" />
            </padding>
            <Label styleClass="section-header" text="Select Course:" />
            <ComboBox fx:id="courseComboBox" minWidth="300" prefWidth="300" />
            <Button fx:id="loadGradesButton" minWidth="120" onAction="#handleLoadGrades" prefHeight="39.0" prefWidth="169.0" styleClass="btn-primary" text="Load Grades" />
         </HBox>

         <!-- Overall Course Grade -->
         <HBox alignment="CENTER" spacing="30" styleClass="card">
            <padding>
               <Insets bottom="15" left="15" right="15" top="15" />
            </padding>
            <Label fx:id="overallGradeLabel" styleClass="section-header" text="Final Grade: Not yet calculated" />
            <Label fx:id="pointsEarnedLabel" styleClass="form-label" text="Total Points Earned: 0" />
            <Label fx:id="totalPointsLabel" styleClass="form-label" text="Total Points Possible: 0" />
         </HBox>

         <!-- Grades Table -->
         <VBox spacing="10" VBox.vgrow="ALWAYS">
            <Label styleClass="section-header" text="Grades Breakdown" />
            <TableView fx:id="gradesTable" styleClass="table-view" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="typeColumn" minWidth="100.0" prefWidth="120.0" sortable="true" text="Type" />
                  <TableColumn fx:id="titleColumn" minWidth="200.0" prefWidth="300.0" sortable="true" text="Title" />
                  <TableColumn fx:id="pointsEarnedColumn" minWidth="120.0" prefWidth="140.0" sortable="true" text="Points Earned" />
                  <TableColumn fx:id="totalPointsColumn" minWidth="120.0" prefWidth="140.0" sortable="true" text="Total Points" />
                  <TableColumn fx:id="percentageColumn" minWidth="100.0" prefWidth="120.0" sortable="true" text="Percentage" />
                  <TableColumn fx:id="feedbackColumn" minWidth="200.0" prefWidth="400.0" sortable="false" text="Feedback" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <placeholder>
                  <VBox alignment="CENTER" spacing="10" styleClass="padding-large">
                     <Label styleClass="section-header" text="No Grades Available" />
                     <Label styleClass="form-label" text="Select a course to view grades" />
                  </VBox>
               </placeholder>
            </TableView>
         </VBox>

         <!-- Action Buttons -->
         <HBox alignment="CENTER" spacing="15">
            <Button fx:id="refreshButton" minWidth="120" onAction="#handleRefresh" prefHeight="40" prefWidth="120" styleClass="btn-secondary" text="Refresh" />
            <Button fx:id="backButton" minWidth="160" onAction="#handleBack" prefHeight="42.0" prefWidth="207.0" styleClass="btn-secondary" text="Back to Dashboard" />
         </HBox>

         <!-- Status Message -->
         <Label fx:id="statusLabel" alignment="CENTER" style="-fx-text-fill: #4CAF50; -fx-font-size: 12px;" text="" textAlignment="CENTER" wrapText="true" />
      </VBox>
   </children>
</AnchorPane>
