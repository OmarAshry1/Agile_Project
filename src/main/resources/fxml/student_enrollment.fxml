<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.facilities.ui.StudentEnrollmentController">
   <children>
      <VBox alignment="CENTER" spacing="20" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">
         <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
         </padding>
         
         <!-- Header -->
         <VBox alignment="CENTER" spacing="10">
            <Label styleClass="page-title" text="Enroll in Courses" />
            <Label styleClass="form-label" text="Redirecting to Course Catalog..." textAlignment="CENTER" wrapText="true" />
            <Label styleClass="form-label" text="Select a course and click 'Enroll in Course' button" textAlignment="CENTER" wrapText="true" />
         </VBox>

         <!-- Action Buttons -->
         <VBox spacing="15" alignment="CENTER">
            <Button onAction="#handleGoToCatalog" minWidth="200" prefHeight="40" prefWidth="200" styleClass="btn-primary" text="Go to Course Catalog" />
            <Button fx:id="backButton" onAction="#handleBack" minWidth="200" prefHeight="40" prefWidth="200" styleClass="btn-secondary" text="Back to Dashboard" />
         </VBox>
      </VBox>
   </children>
</AnchorPane>

