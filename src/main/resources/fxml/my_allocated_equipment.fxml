<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.facilities.ui.MyAllocatedEquipmentController">
   <children>
      <VBox alignment="TOP_CENTER" spacing="20" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">
         <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
         </padding>
         
         <!-- Header -->
         <VBox alignment="CENTER" spacing="10">
            <Label styleClass="page-title" text="My Allocated Equipment" />
            <Label styleClass="form-label" text="View and return equipment allocated to you" textAlignment="CENTER" />
         </VBox>

         <!-- Table -->
         <VBox spacing="10" VBox.vgrow="ALWAYS">
            <TableView fx:id="allocationsTable" prefHeight="400.0" prefWidth="860.0">
               <columns>
                  <TableColumn fx:id="allocationIdColumn" prefWidth="80.0" text="Allocation ID" />
                  <TableColumn fx:id="equipmentTypeColumn" prefWidth="150.0" text="Equipment Type" />
                  <TableColumn fx:id="serialNumberColumn" prefWidth="120.0" text="Serial Number" />
                  <TableColumn fx:id="allocationDateColumn" prefWidth="120.0" text="Allocated Date" />
                  <TableColumn fx:id="notesColumn" prefWidth="200.0" text="Notes" />
                  <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status" />
               </columns>
            </TableView>
         </VBox>

         <!-- Action Buttons -->
         <HBox spacing="10" alignment="CENTER">
            <Button fx:id="refreshButton" onAction="#handleRefresh" styleClass="button-primary" text="Refresh" />
            <Button fx:id="returnButton" onAction="#handleReturnEquipment" styleClass="button-secondary" text="Return Selected Equipment" />
            <Button fx:id="backButton" onAction="#handleBack" styleClass="button-secondary" text="Back to Dashboard" />
         </HBox>

         <!-- Status Message -->
         <Label fx:id="statusLabel" alignment="CENTER" style="-fx-text-fill: #4CAF50; -fx-font-size: 12px;" text="" textAlignment="CENTER" visible="false" wrapText="true" />
      </VBox>
   </children>
</AnchorPane>

