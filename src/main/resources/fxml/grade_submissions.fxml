<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700.0" prefWidth="1200.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.curriculum.ui.GradeSubmissionsController">
   <children>
      <VBox spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         
         <!-- Header -->
         <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label fx:id="titleLabel" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Grade Submissions" />
         </HBox>

         <!-- Assignment Info -->
         <VBox spacing="5.0" styleClass="card">
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <Label fx:id="assignmentInfoLabel" text="Assignment: " />
         </VBox>
         
         <!-- Submissions Table -->
         <TableView fx:id="submissionsTable" prefHeight="350.0" VBox.vgrow="ALWAYS">
            <columns>
               <TableColumn fx:id="studentNameColumn" prefWidth="200.0" text="Student Name" />
               <TableColumn fx:id="studentNumberColumn" prefWidth="150.0" text="Student Number" />
               <TableColumn fx:id="submissionDateColumn" prefWidth="150.0" text="Submission Date" />
               <TableColumn fx:id="currentScoreColumn" prefWidth="120.0" text="Current Score" />
               <TableColumn fx:id="statusColumn" prefWidth="120.0" text="Status" />
            </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
         </TableView>

         <!-- Grading Section -->
         <VBox spacing="10.0" styleClass="card">
            <padding>
               <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            
            <Label text="Grade Selected Submission" style="-fx-font-weight: bold;" />
            
            <HBox spacing="15.0">
               <VBox spacing="5.0">
                  <Label text="Score (0 to max points)" />
                  <Spinner fx:id="scoreSpinner" editable="true" min="0" max="1000" prefWidth="120" />
               </VBox>
               
               <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                  <Label text="Feedback" />
                  <TextArea fx:id="feedbackArea" prefRowCount="5" promptText="Enter feedback for the student..." wrapText="true" />
               </VBox>
            </HBox>
            
            <HBox spacing="10.0" alignment="CENTER_RIGHT">
               <Button fx:id="saveGradeButton" onAction="#handleSaveGrade" text="Save Grade" />
            </HBox>
         </VBox>
         
         <!-- Action Buttons -->
         <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <Button fx:id="refreshButton" onAction="#handleRefresh" text="Refresh" />
            <Button fx:id="backButton" onAction="#handleBack" text="Back" />
         </HBox>
      </VBox>
   </children>
</AnchorPane>

