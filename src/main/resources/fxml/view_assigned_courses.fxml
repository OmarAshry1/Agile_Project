<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700.0" prefWidth="1200.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.facilities.ui.ViewAssignedCoursesController">
   <children>
      <VBox alignment="TOP_CENTER" spacing="20" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">
         <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
         </padding>
         
         <!-- Header -->
         <VBox alignment="CENTER" spacing="10">
            <Label styleClass="page-title" text="My Assigned Courses" />
            <Label styleClass="form-label" text="View your course assignments and schedule" textAlignment="CENTER" />
         </VBox>

         <!-- Statistics -->
         <HBox spacing="30" alignment="CENTER" styleClass="card">
            <padding>
               <Insets bottom="15" left="15" right="15" top="15" />
            </padding>
            <Label fx:id="totalCoursesLabel" styleClass="section-header" text="Total Assigned Courses: 0" />
         </HBox>

         <!-- Table and Details Split -->
         <HBox spacing="15" HBox.vgrow="ALWAYS">
            <!-- Assignments Table -->
            <VBox spacing="10" HBox.hgrow="ALWAYS" prefWidth="700">
               <Label text="Assigned Courses" styleClass="section-header"/>
               <TableView fx:id="assignmentsTable" VBox.vgrow="ALWAYS" styleClass="table-view">
                  <columns>
                     <TableColumn fx:id="codeColumn" minWidth="100.0" prefWidth="120.0" text="Code" sortable="true" />
                     <TableColumn fx:id="nameColumn" minWidth="200.0" prefWidth="300.0" text="Course Name" sortable="true" />
                     <TableColumn fx:id="departmentColumn" minWidth="120.0" prefWidth="150.0" text="Department" sortable="true" />
                     <TableColumn fx:id="semesterColumn" minWidth="120.0" prefWidth="150.0" text="Semester" sortable="true" />
                     <TableColumn fx:id="creditsColumn" minWidth="80.0" prefWidth="100.0" text="Credits" sortable="true" />
                     <TableColumn fx:id="roleColumn" minWidth="120.0" prefWidth="150.0" text="Role" sortable="true" />
                     <TableColumn fx:id="assignedDateColumn" minWidth="120.0" prefWidth="150.0" text="Assigned Date" sortable="true" />
                  </columns>
                  <columnResizePolicy>
                     <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                  </columnResizePolicy>
                  <placeholder>
                     <VBox alignment="CENTER" spacing="10" styleClass="padding-large">
                        <Label text="No Assignments" styleClass="section-header"/>
                        <Label text="You have not been assigned to any courses yet" styleClass="form-label"/>
                     </VBox>
                  </placeholder>
               </TableView>
            </VBox>
            
            <!-- Details Panel -->
            <VBox spacing="10" prefWidth="450">
               <Label text="Course Details" styleClass="section-header"/>
               <TextArea fx:id="courseDetailsArea" VBox.vgrow="ALWAYS" editable="false" wrapText="true" styleClass="form-textarea" />
            </VBox>
         </HBox>

         <!-- Action Buttons -->
         <HBox spacing="15" alignment="CENTER">
            <Button fx:id="refreshButton" onAction="#handleRefresh" minWidth="120" prefHeight="40" prefWidth="120" styleClass="btn-secondary" text="Refresh" />
            <Button fx:id="backButton" onAction="#handleBack" minWidth="160" prefHeight="40" prefWidth="160" styleClass="btn-secondary" text="Back to Dashboard" />
         </HBox>

         <!-- Status Message -->
         <Label fx:id="statusLabel" alignment="CENTER" style="-fx-text-fill: #4CAF50; -fx-font-size: 12px;" text="" textAlignment="CENTER" wrapText="true" />
      </VBox>
   </children>
</AnchorPane>



