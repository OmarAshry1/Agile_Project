<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.staff.ui.ApproveLeaveController"
            prefHeight="700.0" prefWidth="1000.0"
            stylesheets="@../css/style.css">

    <VBox spacing="15" AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20"
          AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>

        <!-- Header -->
        <VBox spacing="5">
            <Label text="Approve/Reject Leave Requests" styleClass="page-title"/>
            <Label text="Review and manage staff leave requests" styleClass="form-label"/>
        </VBox>

        <!-- Filter -->
        <HBox spacing="15" alignment="CENTER_LEFT">
            <Label text="Filter by Status:" styleClass="form-label"/>
            <ComboBox fx:id="statusFilterComboBox" prefWidth="150" prefHeight="35"/>
            <Button fx:id="refreshButton" text="Refresh" onAction="#handleRefresh" 
                    styleClass="button-secondary" prefWidth="100"/>
        </HBox>

        <!-- Table -->
        <VBox spacing="10" VBox.vgrow="ALWAYS">
            <TableView fx:id="leaveRequestsTable" prefHeight="300.0">
                <columns>
                    <TableColumn fx:id="idColumn" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="staffColumn" text="Staff" prefWidth="120"/>
                    <TableColumn fx:id="typeColumn" text="Type" prefWidth="100"/>
                    <TableColumn fx:id="startDateColumn" text="Start Date" prefWidth="100"/>
                    <TableColumn fx:id="endDateColumn" text="End Date" prefWidth="100"/>
                    <TableColumn fx:id="daysColumn" text="Days" prefWidth="60"/>
                    <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                    <TableColumn fx:id="submittedDateColumn" text="Submitted" prefWidth="150"/>
                </columns>
            </TableView>
        </VBox>

        <!-- Details Panel -->
        <VBox spacing="10" styleClass="card">
            <Label text="Request Details" styleClass="form-label"/>
            <VBox spacing="10">
                <VBox spacing="5">
                    <Label text="Reason:" styleClass="form-label"/>
                    <TextArea fx:id="reasonTextArea" prefRowCount="3" wrapText="true" editable="false"/>
                </VBox>
                <VBox spacing="5">
                    <Label text="Rejection Reason:" styleClass="form-label"/>
                    <TextArea fx:id="rejectionReasonTextArea" prefRowCount="2" wrapText="true" editable="false"/>
                </VBox>
            </VBox>
        </VBox>

        <!-- Action Buttons -->
        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="approveButton" text="Approve" onAction="#handleApprove" 
                    styleClass="button-primary" prefWidth="120"/>
            <Button fx:id="rejectButton" text="Reject" onAction="#handleReject" 
                    styleClass="button-danger" prefWidth="120"/>
        </HBox>
    </VBox>
</AnchorPane>

