<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700.0" prefWidth="1200.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.facilities.ui.StudentCourseCatalogController">
   <children>
      <VBox alignment="TOP_CENTER" spacing="20" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">
         <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
         </padding>
         
         <!-- Header -->
         <VBox alignment="CENTER" spacing="10">
            <Label styleClass="page-title" text="Course Catalog" />
            <Label styleClass="form-label" text="Browse and search available courses" textAlignment="CENTER" />
         </VBox>

         <!-- Search and Filters -->
         <VBox spacing="10" styleClass="card">
            <padding>
               <Insets bottom="15" left="15" right="15" top="15" />
            </padding>
            <Label text="Search &amp; Filter" styleClass="section-header"/>
            <HBox spacing="10" alignment="CENTER_LEFT">
               <Label text="Search:" styleClass="form-label"/>
               <TextField fx:id="searchField" onAction="#handleSearch" prefWidth="200.0" promptText="Search courses..." />
               <Button onAction="#handleSearch" styleClass="btn-primary" text="Search" />
            </HBox>
            <HBox spacing="10" alignment="CENTER_LEFT">
               <Label text="Department:" styleClass="form-label"/>
               <ComboBox fx:id="departmentFilter" onAction="#handleFilter" prefWidth="150.0" />
               <Label text="Semester:" styleClass="form-label"/>
               <ComboBox fx:id="semesterFilter" onAction="#handleFilter" prefWidth="150.0" />
               <Label text="Type:" styleClass="form-label"/>
               <ComboBox fx:id="typeFilter" onAction="#handleFilter" prefWidth="120.0" />
            </HBox>
         </VBox>

         <!-- Table -->
         <VBox spacing="10" VBox.vgrow="ALWAYS">
            <Label text="Available Courses" styleClass="section-header"/>
            <TableView fx:id="coursesTable" VBox.vgrow="ALWAYS" styleClass="table-view">
               <columns>
                  <TableColumn fx:id="codeColumn" minWidth="100.0" prefWidth="120.0" text="Code" sortable="true" />
                  <TableColumn fx:id="nameColumn" minWidth="200.0" prefWidth="250.0" text="Course Name" sortable="true" />
                  <TableColumn fx:id="descriptionColumn" minWidth="250.0" prefWidth="300.0" text="Description" sortable="false" />
                  <TableColumn fx:id="departmentColumn" minWidth="120.0" prefWidth="150.0" text="Department" sortable="true" />
                  <TableColumn fx:id="semesterColumn" minWidth="120.0" prefWidth="150.0" text="Semester" sortable="true" />
                  <TableColumn fx:id="typeColumn" minWidth="100.0" prefWidth="120.0" text="Type" sortable="true" />
                  <TableColumn fx:id="creditsColumn" minWidth="80.0" prefWidth="100.0" text="Credits" sortable="true" />
                  <TableColumn fx:id="seatsColumn" minWidth="100.0" prefWidth="120.0" text="Seats" sortable="true" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <placeholder>
                  <VBox alignment="CENTER" spacing="10" styleClass="padding-large">
                     <Label text="No Courses Available" styleClass="section-header"/>
                     <Label text="No courses match your search criteria" styleClass="form-label"/>
                  </VBox>
               </placeholder>
            </TableView>
         </VBox>

         <!-- Action Buttons -->
         <HBox spacing="15" alignment="CENTER">
            <Button fx:id="viewDetailsButton" onAction="#handleViewDetails" minWidth="140" prefHeight="40" prefWidth="140" styleClass="btn-primary" text="View Details" />
            <Button fx:id="enrollButton" onAction="#handleEnroll" minWidth="160" prefHeight="40" prefWidth="160" styleClass="btn-primary" text="Enroll in Course" />
            <Button fx:id="backButton" onAction="#handleBack" minWidth="160" prefHeight="40" prefWidth="160" styleClass="btn-secondary" text="Back to Dashboard" />
         </HBox>

         <!-- Status Message -->
         <Label fx:id="statusLabel" alignment="CENTER" style="-fx-text-fill: #4CAF50; -fx-font-size: 12px;" text="" textAlignment="CENTER" wrapText="true" />
      </VBox>
   </children>
</AnchorPane>

