<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.community.ui.ViewMessageController">
    <VBox spacing="20" styleClass="padding-large" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <HBox alignment="CENTER_LEFT" spacing="20" styleClass="card">
            <padding>
                <Insets bottom="15" left="20" right="20" top="15" />
            </padding>
            <Button fx:id="closeButton" onAction="#handleClose" styleClass="btn-secondary" text="Back to Inbox" />
            <Label styleClass="page-title" text="View Message" />
        </HBox>

        <VBox spacing="15" styleClass="card" VBox.vgrow="ALWAYS">
            <HBox spacing="10">
                <Label styleClass="form-label" text="From:" />
                <Label fx:id="fromLabel" styleClass="text-bold" />
            </HBox>

            <HBox spacing="10">
                <Label styleClass="form-label" text="To:" />
                <Label fx:id="toLabel" />
            </HBox>

            <HBox spacing="10">
                <Label styleClass="form-label" text="Date:" />
                <Label fx:id="dateLabel" />
            </HBox>

            <HBox spacing="10">
                <Label styleClass="form-label" text="Subject:" />
                <Label fx:id="subjectLabel" styleClass="text-bold" />
            </HBox>

            <Separator />

            <TextArea fx:id="messageBodyArea" editable="false" promptText="Message body" VBox.vgrow="ALWAYS" wrapText="true" style="-fx-background-color: transparent; -fx-background-insets: 0;" />

            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Button fx:id="replyButton" onAction="#handleReply" styleClass="btn-primary" text="Reply" />
            </HBox>
        </VBox>
    </VBox>
</AnchorPane>
