<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700.0" prefWidth="1200.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.facilities.ui.StudentMyCoursesController">
   <children>
      <VBox alignment="TOP_CENTER" spacing="20" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">
         <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
         </padding>
         
         <!-- Header -->
         <VBox alignment="CENTER" spacing="10">
            <Label styleClass="page-title" text="My Enrolled Courses" />
            <Label styleClass="form-label" text="View and manage your course enrollments" textAlignment="CENTER" />
         </VBox>

         <!-- Statistics -->
         <HBox spacing="30" alignment="CENTER" styleClass="card">
            <padding>
               <Insets bottom="15" left="15" right="15" top="15" />
            </padding>
            <Label fx:id="enrolledCoursesLabel" styleClass="section-header" text="Enrolled Courses: 0" />
            <Label fx:id="totalCreditsLabel" styleClass="section-header" text="Total Credits: 0 / 18" />
         </HBox>

         <!-- Table -->
         <VBox spacing="10" VBox.vgrow="ALWAYS">
            <Label text="Enrolled Courses" styleClass="section-header"/>
            <TableView fx:id="enrollmentsTable" VBox.vgrow="ALWAYS" styleClass="table-view">
               <columns>
                  <TableColumn fx:id="codeColumn" minWidth="100.0" prefWidth="120.0" text="Code" sortable="true" />
                  <TableColumn fx:id="nameColumn" minWidth="200.0" prefWidth="300.0" text="Course Name" sortable="true" />
                  <TableColumn fx:id="creditsColumn" minWidth="80.0" prefWidth="100.0" text="Credits" sortable="true" />
                  <TableColumn fx:id="professorColumn" minWidth="150.0" prefWidth="200.0" text="Professor" sortable="false" />
                  <TableColumn fx:id="enrollmentDateColumn" minWidth="120.0" prefWidth="150.0" text="Enrollment Date" sortable="true" />
                  <TableColumn fx:id="statusColumn" minWidth="100.0" prefWidth="120.0" text="Status" sortable="true" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <placeholder>
                  <VBox alignment="CENTER" spacing="10" styleClass="padding-large">
                     <Label text="No Enrollments" styleClass="section-header"/>
                     <Label text="You are not enrolled in any courses yet" styleClass="form-label"/>
                  </VBox>
               </placeholder>
            </TableView>
         </VBox>

         <!-- Action Buttons -->
         <HBox spacing="15" alignment="CENTER">
            <Button fx:id="dropButton" onAction="#handleDrop" minWidth="140" prefHeight="40" prefWidth="140" styleClass="btn-primary" text="Drop Course" />
            <Button fx:id="refreshButton" onAction="#handleRefresh" minWidth="120" prefHeight="40" prefWidth="120" styleClass="btn-secondary" text="Refresh" />
            <Button fx:id="backButton" onAction="#handleBack" minWidth="160" prefHeight="40" prefWidth="160" styleClass="btn-secondary" text="Back to Dashboard" />
         </HBox>

         <!-- Status Message -->
         <Label fx:id="statusLabel" alignment="CENTER" style="-fx-text-fill: #4CAF50; -fx-font-size: 12px;" text="" textAlignment="CENTER" wrapText="true" />
      </VBox>
   </children>
</AnchorPane>

