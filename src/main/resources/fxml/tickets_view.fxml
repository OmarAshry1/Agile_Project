<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.facilities.ui.TicketsViewController">
   <children>
      <VBox spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         
         <!-- Header -->
         <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Label fx:id="titleLabel" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Maintenance Tickets" />
         </HBox>
         
         <!-- Assignment Section (Admin only) -->
         <VBox spacing="10.0" visible="true">
            <children>
               <Label fx:id="assigneeLabel" text="Ticket Assignment" visible="true" />
               <HBox alignment="CENTER_LEFT" spacing="15.0">
                  <children>
                     <Label fx:id="staffComboBoxLabel" text="Assign to Staff:" visible="true" />
                     <ComboBox fx:id="staffComboBox" prefWidth="250.0" visible="true" />
                     <Button fx:id="assignButton" onAction="#handleAssignTicket" text="Assign Ticket" visible="true" />
                  </children>
               </HBox>
            </children>
         </VBox>
         
         <!-- Tickets Table -->
         <TableView fx:id="ticketsTable" prefHeight="450.0" VBox.vgrow="ALWAYS">
            <columns>
               <TableColumn fx:id="ticketIdColumn" prefWidth="80.0" text="Ticket ID" />
               <TableColumn fx:id="roomColumn" prefWidth="120.0" text="Room" />
               <TableColumn fx:id="reporterColumn" prefWidth="150.0" text="Reporter" />
               <TableColumn fx:id="assigneeColumn" prefWidth="150.0" text="Assigned To" />
               <TableColumn fx:id="descriptionColumn" prefWidth="300.0" text="Description" />
               <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status" />
               <TableColumn fx:id="createdDateColumn" prefWidth="150.0" text="Created Date" />
            </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
         </TableView>
         
         <!-- Action Buttons -->
         <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <Button fx:id="refreshButton" onAction="#handleRefresh" text="Refresh" />
            <Button fx:id="backButton" onAction="#handleBack" text="Back to Dashboard" />
         </HBox>
      </VBox>
   </children>
</AnchorPane>

