<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700.0" prefWidth="1200.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.facilities.ui.ViewAnnouncementsController">
   <children>
      <VBox alignment="TOP_CENTER" spacing="20" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">
         <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
         </padding>
         
         <!-- Header -->
         <VBox alignment="CENTER" spacing="10">
            <Label styleClass="page-title" text="Announcements" />
            <Label styleClass="form-label" text="View and manage announcements" textAlignment="CENTER" />
         </VBox>

         <!-- Filters -->
         <HBox spacing="15" alignment="CENTER_LEFT" styleClass="card">
            <padding>
               <Insets bottom="15" left="15" right="15" top="15" />
            </padding>
            <Label text="Filter by Role:" styleClass="form-label"/>
            <ComboBox fx:id="roleFilterComboBox" prefWidth="150.0" />
            <CheckBox fx:id="showReadCheckBox" text="Show Read Announcements" />
            <Label fx:id="unreadCountLabel" styleClass="section-header" text="Unread: 0" HBox.hgrow="ALWAYS" />
         </HBox>

         <!-- Table and Details Split -->
         <HBox spacing="15" HBox.vgrow="ALWAYS">
            <!-- Announcements Table -->
            <VBox spacing="10" HBox.hgrow="ALWAYS" prefWidth="700">
               <Label text="Announcements" styleClass="section-header"/>
               <TableView fx:id="announcementsTable" VBox.vgrow="ALWAYS" styleClass="table-view">
                  <columns>
                     <TableColumn fx:id="titleColumn" minWidth="150.0" prefWidth="200.0" text="Title" sortable="true" />
                     <TableColumn fx:id="contentColumn" minWidth="200.0" prefWidth="250.0" text="Content" sortable="false" />
                     <TableColumn fx:id="targetRoleColumn" minWidth="80.0" prefWidth="100.0" text="Target Role" sortable="true" />
                     <TableColumn fx:id="priorityColumn" minWidth="80.0" prefWidth="100.0" text="Priority" sortable="true" />
                     <TableColumn fx:id="createdDateColumn" minWidth="120.0" prefWidth="150.0" text="Created Date" sortable="true" />
                     <TableColumn fx:id="readStatusColumn" minWidth="80.0" prefWidth="100.0" text="Status" sortable="true" />
                  </columns>
                  <columnResizePolicy>
                     <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                  </columnResizePolicy>
                  <placeholder>
                     <VBox alignment="CENTER" spacing="10" styleClass="padding-large">
                        <Label text="No Announcements" styleClass="section-header"/>
                        <Label text="No announcements available" styleClass="form-label"/>
                     </VBox>
                  </placeholder>
               </TableView>
            </VBox>
            
            <!-- Details Panel -->
            <VBox spacing="10" prefWidth="450">
               <Label text="Announcement Details" styleClass="section-header"/>
               <TextArea fx:id="announcementDetailsArea" prefHeight="200" editable="false" wrapText="true" styleClass="form-textarea" />
               <Label text="Attachments:" styleClass="form-label"/>
               <ListView fx:id="attachmentsList" prefHeight="100" />
               <Label text="Links:" styleClass="form-label"/>
               <ListView fx:id="linksList" prefHeight="100" />
            </VBox>
         </HBox>

         <!-- Action Buttons -->
         <HBox spacing="15" alignment="CENTER">
            <Button fx:id="createButton" onAction="#handleCreate" minWidth="140" prefHeight="40" prefWidth="140" styleClass="btn-primary" text="Create" visible="false" managed="false" />
            <Button fx:id="editButton" onAction="#handleEdit" minWidth="120" prefHeight="40" prefWidth="120" styleClass="btn-primary" text="Edit" visible="false" managed="false" />
            <Button fx:id="deleteButton" onAction="#handleDelete" minWidth="120" prefHeight="40" prefWidth="120" styleClass="btn-danger" text="Delete" visible="false" managed="false" />
            <Button fx:id="archiveButton" onAction="#handleArchive" minWidth="120" prefHeight="40" prefWidth="120" styleClass="btn-secondary" text="Archive" visible="false" managed="false" />
            <Button fx:id="markAsReadButton" onAction="#handleMarkAsRead" minWidth="140" prefHeight="40" prefWidth="140" styleClass="btn-primary" text="Mark as Read" />
            <Button fx:id="refreshButton" onAction="#handleRefresh" minWidth="120" prefHeight="40" prefWidth="120" styleClass="btn-secondary" text="Refresh" />
            <Button fx:id="backButton" onAction="#handleBack" minWidth="160" prefHeight="40" prefWidth="160" styleClass="btn-secondary" text="Back to Dashboard" />
         </HBox>

         <!-- Status Message -->
         <Label fx:id="statusLabel" alignment="CENTER" style="-fx-text-fill: #4CAF50; -fx-font-size: 12px;" text="" textAlignment="CENTER" wrapText="true" />
      </VBox>
   </children>
</AnchorPane>

