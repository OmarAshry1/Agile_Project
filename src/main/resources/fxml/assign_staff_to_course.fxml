<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700.0" prefWidth="1200.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.facilities.ui.AssignStaffToCourseController">
   <children>
      <VBox alignment="TOP_CENTER" spacing="20" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">
         <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
         </padding>
         
         <!-- Header -->
         <VBox alignment="CENTER" spacing="10">
            <Label styleClass="page-title" text="Assign Staff to Courses" />
            <Label styleClass="form-label" text="Select a staff member and assign courses. Enable conflict checking to prevent double-booking." textAlignment="CENTER" />
         </VBox>

         <!-- Staff Selection -->
         <VBox spacing="10" styleClass="card">
            <padding>
               <Insets bottom="15" left="15" right="15" top="15" />
            </padding>
            <HBox spacing="10" alignment="CENTER_LEFT">
               <Label text="Select Staff:" styleClass="form-label" minWidth="120"/>
               <ComboBox fx:id="staffComboBox" prefWidth="300.0" promptText="Choose a staff member..." />
               <Label text="Role:" styleClass="form-label" minWidth="60"/>
               <ComboBox fx:id="roleComboBox" prefWidth="150.0" />
               <Button fx:id="viewStaffCoursesButton" onAction="#handleViewStaffCourses" styleClass="btn-secondary" text="View Staff's Courses" />
            </HBox>
            <HBox spacing="10" alignment="CENTER_LEFT">
               <CheckBox fx:id="checkConflictsCheckBox" selected="true" text="Check for schedule conflicts (prevent double-booking)" />
            </HBox>
         </VBox>

         <!-- Table -->
         <VBox spacing="10" VBox.vgrow="ALWAYS">
            <Label text="Available Courses (Select multiple to assign)" styleClass="section-header"/>
            <TableView fx:id="coursesTable" VBox.vgrow="ALWAYS" styleClass="table-view">
               <columns>
                  <TableColumn fx:id="codeColumn" minWidth="100.0" prefWidth="120.0" text="Code" sortable="true" />
                  <TableColumn fx:id="nameColumn" minWidth="200.0" prefWidth="300.0" text="Course Name" sortable="true" />
                  <TableColumn fx:id="departmentColumn" minWidth="120.0" prefWidth="150.0" text="Department" sortable="true" />
                  <TableColumn fx:id="semesterColumn" minWidth="120.0" prefWidth="150.0" text="Semester" sortable="true" />
                  <TableColumn fx:id="creditsColumn" minWidth="80.0" prefWidth="100.0" text="Credits" sortable="true" />
                  <TableColumn fx:id="staffColumn" minWidth="120.0" prefWidth="150.0" text="Assigned Staff" sortable="false" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <placeholder>
                  <VBox alignment="CENTER" spacing="10" styleClass="padding-large">
                     <Label text="No Courses Available" styleClass="section-header"/>
                     <Label text="No active courses found" styleClass="form-label"/>
                  </VBox>
               </placeholder>
            </TableView>
         </VBox>

         <!-- Action Buttons -->
         <HBox spacing="15" alignment="CENTER">
            <Button fx:id="assignButton" onAction="#handleAssign" minWidth="160" prefHeight="40" prefWidth="160" styleClass="btn-primary" text="Assign Selected Courses" />
            <Button fx:id="removeAssignmentButton" onAction="#handleRemoveAssignment" minWidth="180" prefHeight="40" prefWidth="180" styleClass="btn-primary" text="Remove Assignment" />
            <Button fx:id="backButton" onAction="#handleBack" minWidth="160" prefHeight="40" prefWidth="160" styleClass="btn-secondary" text="Back to Dashboard" />
         </HBox>

         <!-- Status Message -->
         <Label fx:id="statusLabel" alignment="CENTER" style="-fx-text-fill: #4CAF50; -fx-font-size: 12px;" text="" textAlignment="CENTER" wrapText="true" />
      </VBox>
   </children>
</AnchorPane>



