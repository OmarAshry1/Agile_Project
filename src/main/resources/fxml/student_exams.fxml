<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.curriculum.ui.StudentExamsController"
            prefHeight="600.0" prefWidth="1200.0"
            stylesheets="@../css/style.css">

    <!-- Main Container -->
    <VBox spacing="15" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" styleClass="padding-large">

        <!-- Header -->
        <VBox spacing="5" styleClass="card">
            <Label text="My Exams" styleClass="page-title"/>
            <Label text="View all exams for your enrolled courses with dates, locations, and grades" styleClass="form-label"/>
        </VBox>

        <!-- Exams Table -->
        <VBox spacing="10" styleClass="card" VBox.vgrow="ALWAYS">
            <TableView fx:id="examsTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="courseNameColumn" text="Course" prefWidth="150"/>
                    <TableColumn fx:id="examTitleColumn" text="Exam Title" prefWidth="200"/>
                    <TableColumn fx:id="examDateColumn" text="Date" prefWidth="120"/>
                    <TableColumn fx:id="examTimeColumn" text="Time" prefWidth="100"/>
                    <TableColumn fx:id="locationColumn" text="Location" prefWidth="150"/>
                    <TableColumn fx:id="durationColumn" text="Duration" prefWidth="100"/>
                    <TableColumn fx:id="totalPointsColumn" text="Total Points" prefWidth="100"/>
                    <TableColumn fx:id="pointsEarnedColumn" text="Points Earned" prefWidth="120"/>
                    <TableColumn fx:id="percentageColumn" text="Percentage" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>

        <!-- Action Buttons -->
        <HBox spacing="12" alignment="CENTER_RIGHT" styleClass="card">
            <Button fx:id="backButton" text="Back" styleClass="btn-secondary"
                    onAction="#handleBack" prefWidth="110" prefHeight="35" HBox.hgrow="ALWAYS"/>
        </HBox>

    </VBox>

</AnchorPane>

