<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="900.0" prefWidth="1400.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.curriculum.ui.CalculateFinalGradesController">
   <children>
      <VBox alignment="TOP_CENTER" spacing="20" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.topAnchor="20">
         <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
         </padding>
         
         <!-- Header -->
         <VBox alignment="CENTER" spacing="10">
            <Label styleClass="page-title" text="Calculate Final Grades" />
            <Label styleClass="form-label" text="Set grade weights and calculate final grades for students" textAlignment="CENTER" />
         </VBox>

         <!-- Course Selection -->
         <HBox alignment="CENTER_LEFT" spacing="15" styleClass="card">
            <padding>
               <Insets bottom="15" left="15" right="15" top="15" />
            </padding>
            <Label styleClass="section-header" text="Select Course:" />
            <ComboBox fx:id="courseComboBox" minWidth="300" prefWidth="300" />
            <Button fx:id="loadCourseButton" minWidth="120" onAction="#handleLoadCourse" prefHeight="39.0" prefWidth="154.0" styleClass="btn-primary" text="Load Course" />
         </HBox>

         <!-- Grade Weights Section -->
         <VBox spacing="10" styleClass="card">
            <padding>
               <Insets bottom="15" left="15" right="15" top="15" />
            </padding>
            <Label styleClass="section-header" text="Grade Weight Distribution" />
            <HBox alignment="CENTER_LEFT" spacing="30">
               <VBox spacing="5">
                  <Label styleClass="form-label" text="Assignments Weight (%):" />
                  <Spinner fx:id="assignmentsWeightSpinner" editable="true" minWidth="150" prefWidth="150" />
               </VBox>
               <VBox spacing="5">
                  <Label styleClass="form-label" text="Quizzes Weight (%):" />
                  <Spinner fx:id="quizzesWeightSpinner" editable="true" minWidth="150" prefWidth="150" />
               </VBox>
               <VBox spacing="5">
                  <Label styleClass="form-label" text="Exams Weight (%):" />
                  <Spinner fx:id="examsWeightSpinner" editable="true" minWidth="150" prefWidth="150" />
               </VBox>
               <VBox spacing="5">
                  <Label fx:id="totalWeightLabel" styleClass="form-label" text="Total: 0%" />
                  <Button fx:id="saveWeightsButton" minWidth="120" onAction="#handleSaveWeights" prefHeight="39.0" prefWidth="145.0" styleClass="btn-primary" text="Save Weights" />
               </VBox>
            </HBox>
         </VBox>

         <!-- Students Final Grades Table -->
         <VBox spacing="10" VBox.vgrow="ALWAYS">
            <HBox alignment="CENTER_LEFT" spacing="15">
               <Label styleClass="section-header" text="Student Final Grades" />
               <Button fx:id="calculateButton" minWidth="150" onAction="#handleCalculateGrades" prefHeight="39.0" prefWidth="194.0" styleClass="btn-primary" text="Calculate All Grades" />
               <Button fx:id="saveAllButton" minWidth="150" onAction="#handleSaveAllGrades" prefHeight="35" prefWidth="150" styleClass="btn-primary" text="Save All Grades" />
            </HBox>
            <TableView fx:id="gradesTable" styleClass="table-view" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="studentNameColumn" minWidth="200.0" prefWidth="250.0" sortable="true" text="Student Name" />
                  <TableColumn fx:id="studentIdColumn" minWidth="120.0" prefWidth="150.0" sortable="true" text="Student ID" />
                  <TableColumn fx:id="calculatedPercentageColumn" minWidth="150.0" prefWidth="180.0" sortable="true" text="Calculated %" />
                  <TableColumn fx:id="calculatedGradeColumn" minWidth="120.0" prefWidth="150.0" sortable="true" text="Calculated Grade" />
                  <TableColumn fx:id="currentGradeColumn" minWidth="120.0" prefWidth="150.0" sortable="true" text="Current Grade" />
                  <TableColumn fx:id="finalGradeColumn" minWidth="200.0" prefWidth="250.0" sortable="false" text="Final Grade (Override)" />
                  <TableColumn fx:id="saveButtonColumn" minWidth="100.0" prefWidth="120.0" sortable="false" text="Action" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <placeholder>
                  <VBox alignment="CENTER" spacing="10" styleClass="padding-large">
                     <Label styleClass="section-header" text="No Students" />
                     <Label styleClass="form-label" text="Select a course to view student grades" />
                  </VBox>
               </placeholder>
            </TableView>
         </VBox>

         <!-- Action Buttons -->
         <HBox alignment="CENTER" spacing="15">
            <Button fx:id="refreshButton" minWidth="120" onAction="#handleRefresh" prefHeight="40" prefWidth="120" styleClass="btn-secondary" text="Refresh" />
            <Button fx:id="backButton" minWidth="160" onAction="#handleBack" prefHeight="42.0" prefWidth="229.0" styleClass="btn-secondary" text="Back to Dashboard" />
         </HBox>

         <!-- Status Message -->
         <Label fx:id="statusLabel" alignment="CENTER" style="-fx-text-fill: #4CAF50; -fx-font-size: 12px;" text="" textAlignment="CENTER" wrapText="true" />
      </VBox>
   </children>
</AnchorPane>
