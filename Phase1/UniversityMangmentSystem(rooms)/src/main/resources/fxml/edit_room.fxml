<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.universitymangmentsystem.controllers.EditRoomController"
            prefHeight="500.0" prefWidth="700.0"
            stylesheets="@../css/style.css">

    <!-- Main Container -->
    <VBox spacing="15" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" styleClass="padding-large">

        <!-- Header -->
        <VBox spacing="5" styleClass="card">
            <Label text="Edit Room" styleClass="page-title"/>
            <Label fx:id="roomInfoLabel" text="Editing room details" styleClass="form-label"/>
        </VBox>

        <!-- Form Container - Two Column Layout -->
        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;">
            <VBox spacing="15" styleClass="card">

                <!-- Row 1: Room Number (Read-only) and Type -->
                <HBox spacing="15">
                    <!-- Room Number -->
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Label text="Room Number" styleClass="form-label"/>
                        <TextField fx:id="roomNumberField"
                                   editable="false"
                                   style="-fx-opacity: 0.7;"
                                   prefHeight="35"/>
                        <Label text="Cannot be changed"
                               style="-fx-text-fill: #546E7A; -fx-font-size: 10px; -fx-font-style: italic;"/>
                    </VBox>

                    <!-- Type -->
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Label text="Room Type *" styleClass="form-label"/>
                        <ComboBox fx:id="typeComboBox"
                                  promptText="Select room type"
                                  maxWidth="Infinity" prefHeight="35"/>
                        <Label fx:id="typeError" text=""
                               style="-fx-text-fill: #E53935; -fx-font-size: 11px;"
                               visible="false" wrapText="true"/>
                    </VBox>
                </HBox>

                <!-- Row 2: Capacity and Status -->
                <HBox spacing="15">
                    <!-- Capacity -->
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Label text="Capacity *" styleClass="form-label"/>
                        <TextField fx:id="capacityField"
                                   promptText="e.g., 50"
                                   prefHeight="35"/>
                        <Label fx:id="capacityError" text=""
                               style="-fx-text-fill: #E53935; -fx-font-size: 11px;"
                               visible="false" wrapText="true"/>
                    </VBox>

                    <!-- Status -->
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Label text="Status *" styleClass="form-label"/>
                        <ComboBox fx:id="statusComboBox"
                                  promptText="Select status"
                                  maxWidth="Infinity" prefHeight="35"/>
                    </VBox>
                </HBox>

                <!-- Row 3: Building and Floor -->
                <HBox spacing="15">
                    <!-- Building -->
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Label text="Building *" styleClass="form-label"/>
                        <TextField fx:id="buildingField"
                                   promptText="e.g., Main Building"
                                   prefHeight="35"/>
                        <Label fx:id="buildingError" text=""
                               style="-fx-text-fill: #E53935; -fx-font-size: 11px;"
                               visible="false" wrapText="true"/>
                    </VBox>

                    <!-- Floor -->
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Label text="Floor" styleClass="form-label"/>
                        <TextField fx:id="floorField"
                                   promptText="e.g., 1st Floor"
                                   prefHeight="35"/>
                    </VBox>
                </HBox>

                <!-- Row 4: Equipment (Full Width) -->
                <VBox spacing="5">
                    <Label text="Equipment" styleClass="form-label"/>
                    <TextArea fx:id="equipmentArea"
                              promptText="e.g., Projector, Whiteboard, Computers"
                              prefHeight="70"
                              wrapText="true"/>
                </VBox>

            </VBox>
        </ScrollPane>

        <!-- Action Buttons -->
        <HBox spacing="12" alignment="CENTER_RIGHT" styleClass="card">
            <Label text="* Required fields" styleClass="form-label"
                   style="-fx-font-style: italic;" HBox.hgrow="ALWAYS"/>
            <Button text="Cancel" styleClass="btn-secondary"
                    onAction="#handleCancel" prefWidth="110" prefHeight="35"/>
            <Button text="✏️ Update Room" styleClass="btn-success"
                    onAction="#handleUpdate" prefWidth="130" prefHeight="35"/>
        </HBox>

    </VBox>

</AnchorPane>