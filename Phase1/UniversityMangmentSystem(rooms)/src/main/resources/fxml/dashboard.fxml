<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.universitymangmentsystem.controllers.dashboardcontroller">

    <VBox spacing="25" styleClass="padding-large" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

        <!-- Welcome Text -->
        <HBox alignment="CENTER_LEFT" spacing="10" styleClass="card">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <Label styleClass="page-title" text="Welcome," />
            <Label fx:id="userIdLabel" prefHeight="34.0" prefWidth="284.0" styleClass="page-title" />
        </HBox>

        <!-- Buttons Row -->
        <HBox alignment="CENTER_LEFT" spacing="15">
            <Button fx:id="roomsButton" onAction="#handleRooms" prefHeight="50" prefWidth="150" styleClass="btn-primary" text="Rooms" />
            <Button fx:id="reportButton" onAction="#handleReport" prefHeight="50" prefWidth="150" styleClass="btn-primary" text="Report" />
        </HBox>

        <!-- Empty space for future buttons -->
        <VBox fx:id="extraButtonsContainer" prefHeight="300" spacing="10" styleClass="card">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <!-- Future buttons can be added dynamically here -->
        </VBox>

    </VBox>

</AnchorPane>
